{% extends 'layout.html.twig' %}

{% block title %}{{ post.slug }}{% endblock %}

{% block content %}
    {% for post in post %}
    <header class="container-fluid">
        <div class="row text-center headTitle">
            <div class="col-sm-12 align-self-center">
                <h3>{{ post.title }}</h3>
            </div>
        </div>
    </header>

    <section class="container img-thumbnail">
        <div class="row justify-content-center">
            <div class="col-sm-12">
                {% if post.image is not empty %}
                    <img src="{{ path }}images/database/post/{{ post.slug }}.jpg" class="img-thumbnail img-fluid" alt="{{ post.label }}">
                {% else %}
                    <img src="{{ path }}images/database/post/default.jpg" class="img-thumbnail img-fluid">
                {% endif %}
                <i class="h6">{{ post.chapo }}</i><br/><br/>
                <p>
                    {{ post.content }}
                </p>
                <small class="float-right">Mis à jour {{ post.lastUpdate }} par {{ post.user }}</small>
            </div>
        </div>
    </section>

    {{ dump(post) }}
    {{ dump(pagination) }}

    {% if pagination.nbTotal > 0 %}
    <!-- COMMENTS -->
    <br/>
    <section class="container">
        <div class="row text-center justify-content-center headTitle2">
            <div class="col-sm-10 align-self-center">
                <h3>Commentaires</h3>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-sm-10 img-thumbnail">
                <div class="float-left text-center">
                {% if post.image is not empty %}
                    <img src="{{ path }}images/database/user/{{ post.slug }}.jpg" class="float-left" height="200px" alt="{{ post.label }}"><br/>
                {% else %}
                    <img src="{{ path }}images/database/user/default.png" class="float-left" height="200px" alt="Image par défaut d'un utilisateur"><br/>
                    <strong>{{ comment.user }}</strong>
                {% endif %}
                </div>
                <p>
                {{ comment.content }}
                </p>
                <small class="float-right">Publié le {{ comment.published }}</small>
            </div>
        </div>
    </section>
    <div class="row justify-content-center">
        <nav aria-label="Navigation des articles">
            <ul class="pagination">
                <!-- PREVIOUS -->
                <li class="page-item {{ pagination.previous.display }}">
                    <a class="page-link" href="{{ path }}posts/{{ post.slug }}/{{ pagination.previous.href }}"><</a>
                </li>
                {% for page in 1..pagination.totalPaging  %}
                    {% if page == pagination.currentPage %}
                        <li class="page-item active">
                            <a class="page-link" href="{{ path }}posts/{{ post.slug }}/{{ page }}">{{ page }} <span class="sr-only">(current)</span></a>
                        </li>
                    {% else %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path }}posts/{{ post.slug }}/{{ page }}">{{ page }}</a>
                        </li>
                    {% endif %}
                {% endfor %}
                <!-- NEXT -->
                <li class="page-item {{ pagination.next.display }}">
                    <a class="page-link" href="{{ path }}posts/{{ post.slug }}/{{ pagination.next.href }}">></a>
                </li>
            </ul>
        </nav>
    </div>
    {% endif %}
    {% endfor %}
{% endblock %}

{% block javascript %}
{% endblock %}