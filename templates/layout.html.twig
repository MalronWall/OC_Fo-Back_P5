<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>

    <title>{% block title %}{{ title }}{% endblock %}</title>

    {% block stylesheets %}
        <!-- Ligne à commenter une fois développé -->
        <link rel="stylesheet" href="../public/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css"
              integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4"
              crossorigin="anonymous">
        <link rel="stylesheet" href="../public/css/myStyle.css">

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
                integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
                crossorigin="anonymous">
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"
                integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ"
                crossorigin="anonymous">
        </script>
        <!-- Ligne à commenter une fois développé -->
        <link rel="stylesheet" href="../public/js/bootstrap.min.js">
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"
                integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm"
                crossorigin="anonymous">
        </script>
    {% endblock %}

    <link rel="icon" type="image/x-icon" href=""/>
</head>
<body>

{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="../public/">Thibaut Tourte</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item {{ activePage('') |raw }}">
                    <a class="nav-link" href="../public/">Accueil {{ currentPage('') |raw }}</a>
                </li>
                <li class="nav-item {{ activePage('posts') |raw }}">
                    <a class="nav-link" href="../public/posts">Posts {{ currentPage('posts') |raw }}</a>
                </li>
                <li class="nav-item {{ activePage('contact') |raw }}">
                    <a class="nav-link" href="../public/contact">Contact {{ currentPage('contact') |raw }}</a>
                </li>
                <li class="nav-item {{ activePage('login') |raw }}">
                    <a class="nav-link" href="../public/login">Se connecter {{ currentPage('login') |raw }}</a>
                </li>
            </ul>
        </div>
    </nav>
{% endblock %}

{% block head %}{% endblock %}

{% block content %}{% endblock %}

{% block javascripts %}{% endblock %}

</body>
</html>
