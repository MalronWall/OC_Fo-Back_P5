{% extends 'mails/layout.html.twig' %}

{% block content %}
    <!-- 1 Column Text + Button : BEGIN -->
    <tr>
        <td style="background-color: #ffffff;">
            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                <tr>
                    <td style="padding: 40px 40px 20px; font-family: sans-serif; font-size: 15px; line-height: 140%; color: #555555;">
                        <h1 style="margin: 0 0 10px; font-size: 24px; line-height: 125%; color: #333333; font-weight: normal;">
                            <a href="mailto:{{ email }}">{{ title | raw }}</a></h1>
                        <h2>Sujet : {{ subject }}</h2>
                        <P>
                            {{ content | raw }}
                        </P>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <!-- 1 Column Text + Button : END -->
{% endblock %}